<div class="bg-white p-6 rounded-lg shadow">
  <div class="mb-6">
    <h2 class="text-2xl font-bold mb-2">Subject</h2>
    <p class="text-gray-700"><%= cold_email.subject %></p>
  </div>

  <div>
    <h2 class="text-2xl font-bold mb-2">Body</h2>
    <div class="prose max-w-none">
      <%= simple_format cold_email.body, class: "text-gray-700" %>
    </div>
  </div>

  <div class="mt-6 flex gap-2">
    <button class="rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium"
            data-controller="clipboard"
            data-action="clipboard#copy"
            data-clipboard-text="<%= cold_email.body %>">
      Copy to clipboard
    </button>

    <%= link_to "Edit", edit_cold_email_path(cold_email),
                class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
  </div>
</div>
