<%= turbo_frame_tag "email-preview", class: "block" do %>
  <div class="bg-white rounded-lg shadow overflow-hidden border border-gray-200">
    <%# Email Header %>
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <div class="mb-4">
        <p class="text-lg font-semibold text-gray-900"><%= cold_email.subject %></p>
      </div>
    </div>

    <%# Email Body %>
    <div class="p-6">
      <div class="prose max-w-none">
        <%= simple_format cold_email.body, class: "text-gray-700 whitespace-pre-line" %>
      </div>
    </div>

    <%# Email Actions %>
    <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
      <div class="flex items-center gap-3">
        <%# Copy Button %>
        <button class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-500
                     text-white font-medium rounded-md transition-colors duration-150"
                data-controller="clipboard"
                data-action="clipboard#copy"
                data-clipboard-text="<%= cold_email.body %>">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
          </svg>
          Copy to clipboard
        </button>

        <%# Edit Button %>
        <%= link_to edit_cold_email_path(cold_email),
                    class: "inline-flex items-center gap-2 px-4 py-2 bg-gray-100
                 hover:bg-gray-200 text-gray-700 font-medium rounded-md
                 transition-colors duration-150",
                    target: "_top",
                    data: { turbo: false } do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit
        <% end %>
      </div>
    </div>
  </div>
<% end %>